  protected void Button1_Click(object sender, EventArgs e)
        {
            string times = dropTimes.SelectedValue.ToString();

            if (times == "Corinthians")
            {
                lblresul.Text = "AQUI TEM UM BANDO DE LOUCOS, LOUCOS POR TI CORINTHIANS!";
                imgTime.ImageUrl = "imagens/corinthians.png";
            }

            else if (times == "São Paulo")
            {
                lblresul.Text = "Vamos, Tricolor!";
                imgTime.ImageUrl = "imagens/sao-paulo.png";
            }


            else if (times == "Santos ")
            {
                lblresul.Text = "O nosso Peixe, é o símbolo da superação, da luta incansável por vitórias!";
                imgTime.ImageUrl = "imagens/santos.png";
            }


            else if (times == "Palmeiras ")
            {
                lblresul.Text = "Ser palmeirense é ter luta, resiliência e perseverança no DNA!";
                imgTime.ImageUrl = "imagens/palmeiraas.png";
            }


            else if (times == "Real Madrid")
            {
                lblresul.Text = "Real Madrid tem 9 Champions, mas quantas tu viu?!";
                imgTime.ImageUrl = "imagens/real.png";
            }

            else if (times == "Escolha")
            {
                lblresul.Text = "";
                imgTime.ImageUrl = "";
            }
