 protected void Button1_Click(object sender, EventArgs e)
        {
            int valordrop = Convert.ToInt32(Txt_VD.Text);
            dpl1.Items.Clear();
            
            for (int i = 1; i <= valordrop; i++)
            {
                dpl1.Items.Add(new ListItem(i.ToString(), i.ToString()));
            }    
        }

protected void btn_soma_Click(object sender, EventArgs e)
            {
                int num1 = Convert.ToInt32(txt_calculado.Text);
                int num2 = Convert.ToInt32(txt_calcu.Text);
                int somar = num1 + num2;
                lblresult.Text = somar.ToString();
            }

            protected void btn_sub_Click(object sender, EventArgs e)
            {
                int num1 = Convert.ToInt32(txt_calculado.Text);
                int num2 = Convert.ToInt32(txt_calcu.Text);
                int somar = num1 - num2;
                lblresult.Text = somar.ToString();
            }

            protected void btn_mult_Click(object sender, EventArgs e)
            {
            double num1 = Convert.ToInt32(txt_calculado.Text);
            double num2 = Convert.ToInt32(txt_calcu.Text);
            double somar = num1 * num2;
                lblresult.Text = somar.ToString();
            }

            protected void btn_div_Click(object sender, EventArgs e)
            {
                double num1 = Convert.ToInt32(txt_calculado.Text);
                double num2 = Convert.ToInt32(txt_calcu.Text);
                double somar = num1 / num2;
                lblresult.Text = somar.ToString();
            }

            protected void btn_veri_Click(object sender, EventArgs e)
            {
                int n1 = Convert.ToInt32(Txt_mr.Text);
                int n2 = Convert.ToInt32(Txt_mn.Text);

                if (n1 == n2)
                {
                    lblresulta.Text = "Os números são iguais.";
                }
                else if (n1 < n2)
                {
                    lblresulta.Text = "O segundo número é maior.";
                }
                else if (n1 > n2)
                {
                    lblresulta.Text = "O primeiro número é maior";
                }
            }

            protected void btn_limpar_Click(object sender, EventArgs e)
            {
                txt_calcu.Text = "";
                txt_calculado.Text = "";
                lblresult.Text = "";
            }

            protected void btn_verifi_Click(object sender, EventArgs e)
            {
                string descolha = dpdescolha.SelectedValue.ToString();

                if (descolha == "Maior número")
                {
                    P_Calculadora.Visible = false;
                    P_Maior.Visible = true;
                }

            }

        protected void DropDownList1_SelectedIndexChanged(object sender, EventArgs e)
        {
            string escolha = dpdescolha.SelectedValue.ToString();

            if (escolha == "Calculadora")
            {
                P_Calculadora.Visible = true;
                P_Maior.Visible = false;
                PanelPI.Visible = false;
            }

            if (escolha == "Maior número")
            {
                P_Calculadora.Visible = false;
                P_Maior.Visible = true;
                PanelPI.Visible = false;
            }
                 if (escolha == "Par e Ímpar")
            {
                P_Calculadora.Visible = false;
                P_Maior.Visible = false;
                PanelPI.Visible = true;
            }

            if (escolha == "Escolha")
            {
                P_Calculadora.Visible = false;
                P_Maior.Visible = false;
                PanelPI.Visible = false;
            }
        }
    }
    }
protected void dpl1_SelectedIndexChanged(object sender, EventArgs e)
        {
            int numero = Convert.ToUInt16(dpl1.SelectedValue.ToString());

            ListBox_1.Items.Clear();
            ListBox_2.Items.Clear();

            for (int i = 1; i <= numero; i++)
            {
                if (i % 2 == 0)
                {
                    ListBox_1.Items.Add(i.ToString());
                }
                else
                {
                    ListBox_2.Items.Add(i.ToString());
                }
            }
        }
    }
}
