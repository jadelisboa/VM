                DIGITE UM NÚMERO:
                <asp:TextBox ID="txt_calcu" runat="server"></asp:TextBox>
                <br />
                <br />
                <asp:Button ID="btn_soma" runat="server" OnClick="btn_soma_Click" style="background-color: #FFFFFF" Text="Soma" />
                &nbsp;<asp:Button ID="btn_sub" runat="server" OnClick="btn_sub_Click" style="background-color: #FFFFFF" Text="Subtração" />
                &nbsp;<asp:Button ID="btn_mult" runat="server" OnClick="btn_mult_Click" style="background-color: #FFFFFF" Text="Multiplicação" />
                &nbsp;<asp:Button ID="btn_div" runat="server" OnClick="btn_div_Click" style="background-color: #FFFFFF" Text="Divisão" />
                &nbsp;<asp:Button ID="btn_limpar" runat="server" OnClick="btn_limpar_Click" style="background-color: #FFFFFF" Text="Limpar" />
